# Debian Preseed Configuration
# Generated by pim (Product Image Manager)

# Locale and keyboard
d-i debian-installer/locale string <%= locale || 'en_US.UTF-8' %>
d-i keyboard-configuration/xkb-keymap select <%= keyboard || 'us' %>

# Network
d-i netcfg/choose_interface select auto
d-i netcfg/get_hostname string <%= hostname || 'debian' %>
d-i netcfg/get_domain string <%= domain || 'local' %>

# Mirror
d-i mirror/country string manual
d-i mirror/http/hostname string <%= mirror_host || 'deb.debian.org' %>
d-i mirror/http/directory string <%= mirror_path || '/debian' %>
d-i mirror/http/proxy string <%= http_proxy || '' %>

# Clock and timezone
d-i clock-setup/utc boolean true
d-i time/zone string <%= timezone || 'UTC' %>

# Partitioning - use entire disk
d-i partman-auto/method string <%= partitioning_method || 'regular' %>
d-i partman-auto/choose_recipe select <%= partitioning_recipe || 'atomic' %>
d-i partman-partitioning/confirm_write_new_label boolean true
d-i partman/choose_partition select finish
d-i partman/confirm boolean true
d-i partman/confirm_nooverwrite boolean true

# User account
d-i passwd/root-login boolean false
d-i passwd/user-fullname string <%= fullname || username || 'User' %>
d-i passwd/username string <%= username || 'user' %>
d-i passwd/user-password password <%= password || 'changeme' %>
d-i passwd/user-password-again password <%= password || 'changeme' %>

# Package selection
tasksel tasksel/first multiselect <%= tasksel || 'standard, ssh-server' %>
d-i pkgsel/include string <%= packages || 'openssh-server curl sudo' %>
d-i pkgsel/upgrade select full-upgrade
popularity-contest popularity-contest/participate boolean false

# Grub
d-i grub-installer/only_debian boolean true
d-i grub-installer/bootdev string <%= grub_device || 'default' %>

# Finish
d-i finish-install/reboot_in_progress note

<% if authorized_keys_url %>
# Late command - setup sudo and SSH keys
d-i preseed/late_command string \
    in-target sh -c 'echo "<%= username || 'user' %> ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/<%= username || 'user' %>'; \
    in-target chmod 440 /etc/sudoers.d/<%= username || 'user' %>; \
    in-target mkdir -p /home/<%= username || 'user' %>/.ssh; \
    in-target curl -fsSL "<%= authorized_keys_url %>" -o /home/<%= username || 'user' %>/.ssh/authorized_keys; \
    in-target chmod 700 /home/<%= username || 'user' %>/.ssh; \
    in-target chmod 600 /home/<%= username || 'user' %>/.ssh/authorized_keys; \
    in-target chown -R <%= username || 'user' %>:<%= username || 'user' %> /home/<%= username || 'user' %>/.ssh
<% elsif post_install_url %>
# Late command - run post-install script
d-i preseed/late_command string \
    in-target sh -c 'echo "<%= username || 'user' %> ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/<%= username || 'user' %>'; \
    in-target chmod 440 /etc/sudoers.d/<%= username || 'user' %>; \
    in-target curl -fsSL "<%= post_install_url %>" -o /tmp/post-install.sh; \
    in-target chmod +x /tmp/post-install.sh; \
    in-target /tmp/post-install.sh
<% else %>
# Late command - setup sudo only
d-i preseed/late_command string \
    in-target sh -c 'echo "<%= username || 'user' %> ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/<%= username || 'user' %>'; \
    in-target chmod 440 /etc/sudoers.d/<%= username || 'user' %>
<% end %>
