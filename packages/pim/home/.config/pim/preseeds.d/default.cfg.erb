# Debian Preseed Configuration
# Generated by pim (Product Image Manager)

# Locale and keyboard
d-i debian-installer/locale string <%= locale %>
d-i keyboard-configuration/xkb-keymap select <%= keyboard %>

# Network
d-i netcfg/choose_interface select auto
d-i netcfg/get_hostname string <%= hostname %>
d-i netcfg/get_domain string <%= domain %>

# Mirror
d-i mirror/country string manual
d-i mirror/http/hostname string <%= mirror_host %>
d-i mirror/http/directory string <%= mirror_path %>
d-i mirror/http/proxy string <%= http_proxy %>

# Clock and timezone
d-i clock-setup/utc boolean true
d-i time/zone string <%= timezone %>

# Partitioning - use entire disk
d-i partman-auto/method string <%= partitioning_method %>
d-i partman-auto/choose_recipe select <%= partitioning_recipe %>
d-i partman-partitioning/confirm_write_new_label boolean true
d-i partman/choose_partition select finish
d-i partman/confirm boolean true
d-i partman/confirm_nooverwrite boolean true

# User account
d-i passwd/root-login boolean false
d-i passwd/user-fullname string <%= fullname %>
d-i passwd/username string <%= username %>
d-i passwd/user-password password <%= password %>
d-i passwd/user-password-again password <%= password %>

# Package selection
tasksel tasksel/first multiselect <%= tasksel %>
d-i pkgsel/include string <%= packages %>
d-i pkgsel/upgrade select full-upgrade
popularity-contest popularity-contest/participate boolean false

# Grub
d-i grub-installer/only_debian boolean true
d-i grub-installer/bootdev string <%= grub_device %>

# Finish
d-i finish-install/reboot_in_progress note

# Late command - sudoers setup (always) + optional post-install and authorized_keys
d-i preseed/late_command string \
    in-target sh -c 'echo "<%= username %> ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/<%= username %>'; \
    in-target chmod 440 /etc/sudoers.d/<%= username %><% if install_url %>; \
    in-target curl -fsSL "<%= install_url %>" -o /tmp/install.sh; \
    in-target chmod +x /tmp/install.sh; \
    in-target /bin/bash /tmp/install.sh<% end %><% if authorized_keys_url %>; \
    in-target mkdir -p /home/<%= username %>/.ssh; \
    in-target curl -fsSL "<%= authorized_keys_url %>" -o /home/<%= username %>/.ssh/authorized_keys; \
    in-target chmod 700 /home/<%= username %>/.ssh; \
    in-target chmod 600 /home/<%= username %>/.ssh/authorized_keys; \
    in-target chown -R <%= username %>:<%= username %> /home/<%= username %>/.ssh<% end %>
